{
  "compilerOptions": {
    "target": "es2016",
    "module": "es2015",
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "baseUrl": "src",
    "allowSyntheticDefaultImports": true,
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "lib": ["dom", "es2015"],
    "moduleResolution": "node",
    "types": [
      "webpack-env",
      "node"
    ]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}